{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "router-rules.schema.json",
  "title": "Global Router Rules Schema",
  "description": "Schema for validating the global router-rules.json file",
  "type": "object",
  "required": ["version", "agent_categories", "skills", "injection_templates"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version string"
    },
    "generated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp of generation"
    },
    "description": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "agent_categories": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/agentCategory"
      }
    },
    "skills": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/skill"
      }
    },
    "injection_templates": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "template": { "type": "string" }
        }
      }
    },
    "routing_rules": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "short_threshold_words": { "type": "integer" },
        "case_insensitive": { "type": "boolean" }
      }
    }
  },
  "$defs": {
    "agentCategory": {
      "type": "object",
      "required": ["triggers", "agents"],
      "properties": {
        "description": { "type": "string" },
        "triggers": {
          "type": "array",
          "items": { "type": "string" }
        },
        "agents": {
          "type": "array",
          "items": { "$ref": "#/$defs/agent" }
        }
      }
    },
    "agent": {
      "type": "object",
      "required": ["name", "purpose"],
      "properties": {
        "name": { "type": "string" },
        "purpose": { "type": "string" },
        "tools": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "skill": {
      "type": "object",
      "required": ["triggers", "purpose"],
      "properties": {
        "triggers": {
          "type": "array",
          "items": { "type": "string" }
        },
        "patterns": {
          "type": "array",
          "items": { "type": "string" }
        },
        "purpose": { "type": "string" }
      }
    }
  }
}
