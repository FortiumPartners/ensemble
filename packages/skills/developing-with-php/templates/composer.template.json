{
    "name": "{{ vendor }}/{{ project }}",
    "description": "{{ description }}",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "{{ author_name }}",
            "email": "{{ author_email }}"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Handlers\\": "src/Handlers/",
            "App\\MapData\\": "src/MapData/",
            "App\\Enums\\": "src/Enums/",
            "App\\Traits\\": "src/Traits/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=8",
        "cs": "phpcs --standard=PSR12 src",
        "cs:fix": "phpcbf --standard=PSR12 src",
        "check": [
            "@cs",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
